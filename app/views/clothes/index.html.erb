<div class = "container-fluid">
	<div class = "row">
		<div class = "main_header">
			<div class = "col-2 float-left weather-img">
				<img src= <%= @weather_img%>></img>
			</div>
			<div class = "col-3 float-left now_temp">
				<span>現在気温</span><br>
				<%= @weather_d["main"]["temp"].to_i - 273  %>℃
			</div>
			<div class = "col-3 float-left min_temp">
				<span>最低気温</span><br>
				<%= @weather_d["main"]["temp_min"].to_i - 273 %>℃
			</div>
			<div class = "col-3 float-left max_temp">
				<span>最高気温</span><br>
				<%= @weather_d["main"]["temp_max"].to_i - 273 %>℃
			</div>
		</div>
	</div>
	<div class ="container">
		<h3>今日の気温に近いコーディネート</h3>
        <div class="row" style="margin:10px 0;" >
        	<% @clothes_t.first(6).each do |c| %><!--現在気温おすすめコーデ6件表示-->
		        <div class = "col-3">
		        	<div class = "card" >
			        	<%= link_to (clothe_path(c.id)) do %>
			        	<%= attachment_image_tag c, :clothes_image, :fill, 300, 350, format: 'jpeg', fallback: "no_image.jpg",class: "img-fluid" %>
			        	<% end %>
					        <div class="card-body">
						        <%= c.temperature %>℃
						       	<%= c.user.tall %>cm
						      	<%= c.user.nickname %>
						    </div>
				    </div>
				</div>
    		<% end %>
	    </div>
	</div>
	<div class ="container">
		<h4>新着</h4>
        <div class="row" style="margin:10px 0;" >
        	<% @clothes.reverse.each do |c| %><!--新着コーディネート-->
	        	<div class = "col-4">
			        <div class = "card" style="margin-top: 30px;>
			        	<%= link_to (clothe_path(c.id)) do %>
			        	<%= attachment_image_tag c, :clothes_image, :fill, 350, 400, format: 'jpeg', fallback: "no_image.jpg",class: "img-fluid" %>
			        	<% end %>
		         		<div class="card-body">
					        <%= c.temperature %>℃
					       	<%= c.user.tall %>cm
					      	<%= c.user.nickname %>
						</div>
					</div>
				</div>
    		<% end %>
    	</div>
	</div>
</div>