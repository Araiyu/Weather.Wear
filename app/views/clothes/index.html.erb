<div class="container">
	<div class="row">
		<div class="top_weather">
			<div class ="col-4"><%= @weather_d["main"]["temp"].to_i - 273  %></div>
			<div class ="col-4"><%= @weather_d["main"]["temp_min"].to_i - 273 %></div>
			<div class ="col-4"><%= @weather_d["main"]["temp_max"].to_i - 273 %></div>
		</div>
	</div>
	<table style="height: 100px;">
	      <thead>
	        <tr>
	          <th>投稿</th>
	          <th>気温</th>
	          <th>天気</th>
	          <th>降水確率</th>
	        </tr>
	      </thead>
	      <tbody>
	        <% @clothes.each do |c| %>
	        	<div class="row" style="margin:10px 0;">
		            <div class="col-md-offset-10 col-md-10">
			          <tr>
			            <td class="align-middle"><%= attachment_image_tag c, :clothes_image, :fill, 250, 300, format: 'jpeg', fallback: "no_image.jpg" %></td>
			            <td class="align-middle"><%= c.temperature %></td>
			            <td class="align-middle"><%= c.weather %></td>
			            <td class="align-middle"><%= c.rainy_percent %><span>%</span></td>
			          </tr>
			      	</div>
		  		</div>
	        <% end %>
	    </tbody>
	</table>
	<div class="weather">
	      <label>都市名：</label>
	        <input id="cityname" type="text" size="14" maxlength="14" placeholder="Tokyo">
	        <button id="btn">検索</button><br>
	       <span>場所 :</span>
	       <span id="place"></span><br>
	       <span>最高気温 :</span>
	       <span id="temp_max"></span>
	       <span> ℃</span><br>
	       <span>最低気温 :</span>
	       <span id="temp_min"></span>
	       <span> ℃</span><br>
	       <span>湿度 :</span>
	       <span id="humidity"></span>
	       <span> %</span><br>
	       <span>風速 :</span>
	       <span id="speed"></span>
	       <span> m/s</span><br>
	       <span>天気 :</span>
	       <span id="weather"></span>
	       <div id="icon"><img id="img"></div>
	        <script src="weather.js"></script>
	</div>
</div>