<div class = "container-fluid" style="background-color: #FFFFFF;">
	<div class="row">
		<div class="col-4">
			<div class="row">
				<div class ="p_image">
					<div class="card"style=" margin:20px 0 0 30px;">
						<%= attachment_image_tag @user, :user_image, :fill, 200, 200, format: 'jpeg', size:'200*200', fallback: "no_profile_image.jpg", size: '200x200', class: "img-fluid"%>
						<%= @user.nickname %>
						<%= @user.gender %>
						<%= @user.tall %>cm
					</div>
				</div>
			</div>
		</div>
		<div class="col-4 introduction"style="margin-top: 10px"><%= @user.introduction %></div>
		<div class="col-4 sns"></div>
	</div>
</div>
<div class = "container-fluid", style="border-top: 1px dashed #dcdcdc;,margin-top: 30px">
	<div class = "container"style="margin-top: 30px">
		<div class ="row">
			<div class="col-6">
			    <div class="row" style="margin:10px 0;" >
		        	<% @user.clothes.each do |c| %><!--user_-->
			        	<div class = "col-6 card-clothe">
					        <div class = "card">
					        	<%= link_to (clothe_path(c.id)) do %>
					        	<%= attachment_image_tag c, :clothes_image, :fill, 300, 350, format: 'jpeg', fallback: "no_image.jpg",class: "img-fluid" %>
					        	<% end %>
						        <%= c.temperature %>℃
						        <%= c.user.tall %>cm
						        <%= c.user.nickname %>
					        </div>
					    </div>
		    		<% end %>
				</div>
			</div>
			<div class="col-6">
				<div class="row"style="margin:10px 0;">
					<% @favo_clothes.each do |c| %>
						<div class = "col-6 card-clothe">
					        <div class = "card">
					        	<%= link_to (clothe_path(c.id)) do %>
					        	<%= attachment_image_tag c, :clothes_image, :fill, 300, 350, format: 'jpeg', fallback: "no_image.jpg",class: "img-fluid" %>
					        	<% end %>
						        <%= c.temperature %>℃
						    	<%= c.user.tall %>cm
						        <%= c.user.nickname %>
					        </div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>