<div class = "container-fluid", style =" border: 2px dashed #dcdcdc;background-color: #eaffd0;">
	<div class="row">
		<div class="col-4">
			<div class="row">
				<div class ="p_image">
					<div class="card"style=" margin:20px 0 0 30px; ">
						<%= attachment_image_tag @user, :user_image, :fill, 200, 200, format: 'jpeg', size:'200*200', fallback: "/images/no_profile_image.jpg", size: '200x200', class: "img-fluid"%>
					</div>
				</div>
			</div>
		</div>
		<div class="col-4">
			<div class="user_n" , style =" border: 2px dashed #dcdcdc; margin: 10px 10px 10px 0; font-size:40px;">
				<%= @user.nickname %>
			</div>
			<div class="user_s">
				<%= @user.gender %>
				<%= @user.tall %>cm
			</div>
		</div>
		<div class= "col-4">
			<div class="introduction", style =" border: 2px dashed #dcdcdc; margin: 10px 10px 10px 0; height:180px;" >
					<%= @user.introduction %>
				</div>
			<div class="edit-delet">
				<% if @user == current_user %>
					<i class="fas fa-cog"></i>
					<%= link_to "編集", edit_user_path(@user) %>
				<% end %>
			</div>
		</div>
	</div>
</div>
<div class = "container-fluid">
	<div class = "container">
		<div class ="row">
			<div class="col-5", style =" border: 2px dashed #dcdcdc; margin: 10px 10px 10px 0;" >
				<div class="pull-right"><%= fa_icon 'camera 3x' %></div>
			    <div class="row" style="margin:10px 0;" >
		        	<% @user.clothes.each do |c| %><!--user_-->
			        	<div class = "col-6 card-clothe">
					        <div class = "card">
					        	<%= link_to (clothe_path(c.id)) do %>
					        	<%= attachment_image_tag c, :clothes_image, :fill, 300, 350, format: 'jpeg', fallback: "/images/no_image.jpg",class: "img-fluid" %>
					        	<% end %>
						        <%= c.temperature %>℃
						        <%= c.user.tall %>cm
						        <%= c.user.nickname %>
					        </div>
					    </div>
		    		<% end %>
				</div>
			</div>
			<div class="col-5", style =" border: 2px dashed #dcdcdc; margin: 10px 10px 10px 0;">
				<div class="pull-right"><%= fa_icon 'heart 3x' %></div>
				<div class="row"style="margin:10px 0;">
					<% @favo_clothes.each do |c| %>
						<div class = "col-6 card-clothe">
					        <div class = "card">
					        	<%= link_to (clothe_path(c.id)) do %>
					        	<%= attachment_image_tag c, :clothes_image, :fill, 300, 350, format: 'jpeg', fallback: "/images/no_image.jpg",class: "img-fluid" %>
					        	<% end %>
						        <%= c.temperature %>℃
						    	<%= c.user.tall %>cm
						        <%= c.user.nickname %>
					        </div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>