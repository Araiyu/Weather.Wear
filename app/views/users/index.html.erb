<div class = "container-fluid">
	<div class ="container">
		<h3>USERS</h3>
		<% @users.each do |u| %>
			<div class="row" style="margin:10px 0 0 10px;" >
				<div class="col-12">
		        	<div class = "card" >
		        		<div class="row">
			        		<div class="col-2" style="margin:10px 0 10px 20px;,border-radius: 1em;">
			        			<div class="p_image">
					        		<%= link_to (user_path(u.id)) do %>
							        	<%= attachment_image_tag u, :user_image, :fill, 300, 350, format: 'jpeg', fallback: "no_image.jpg", size: '100x100',class: "img-fluid" , class: "p_image" %>
							        <% end %>
							    </div>
						    </div>
					        <div class="col-9">
					        	<%= u.nickname %><br>
					        	<%= u.gender %>
						       	<%= u.tall %>cm
						    </div>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>
